# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/aeo_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aeo_platform
DB_USER=username
DB_PASSWORD=password

# AI API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# Google Analytics API
GOOGLE_ANALYTICS_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"..."}
GOOGLE_ANALYTICS_PROPERTY_ID=your-ga4-property-id

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key
PIN_SALT_ROUNDS=12

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Service Configuration
AI_REQUEST_TIMEOUT=30000
MAX_TOKENS_PER_REQUEST=4000
AI_RETRY_ATTEMPTS=3

# Scraping Configuration
SCRAPER_TIMEOUT=10000
MAX_PAGE_SIZE=5000000
USER_AGENT=AEO-Platform-Bot/1.0

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=86400

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
